<div class="row">
    <div class="col-lg-12">
        <div class="card card-outline-primary">
            <div class="card-header">
                <h4 class="m-b-0 text-white">Add Question</h4>
            </div>
            <div class="card-body">
                <form id="addPaper"  action="/question/add" method="POST">
                    <div class="form-body">
                        <h3 class="card-title m-t-15">Question Info</h3>
                        <hr>
                        <!--row-->
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Question</label>
                                    <textarea name="title" id="title" cols="50" rows="4"></textarea>
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">Paper</label>
                                    <select name="paper_id" id="paper_id" class="form-control form-control-danger">

                                        <% for ( var i = 0; i < papers.length; i++ ){%>
                                            <option value="<%=papers[i].id %>"><%=papers[i].title %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                         <!--row-->
                         <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Option 1</label>
                                    <input type="text" name="option1" id="option1" class="form-control form-control-danger" placeholder="Option 1">
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">Option 2</label>
                                    <input type="text" name="option2" id="option2" class="form-control form-control-danger" placeholder="Option 2">
                                    
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->
                        <!--row-->
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Option 3</label>
                                    <input type="text" name="option3" id="option3" class="form-control form-control-danger" placeholder="Option 3">
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">Option 4</label>
                                    <input type="text" name="option4" id="option4" class="form-control form-control-danger" placeholder="Option 4">
                                    
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->

                        <!--row-->
                        <div class="row p-t-20">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Answer</label>
                                    <input type="text" name="answer" id="answer" class="form-control form-control-danger" placeholder="Answer">
                                </div>
                            </div>
                            <!--/span-->
                            <div class="col-md-6">
                                <div class="form-group has-danger">
                                    <label class="control-label">Mark</label>
                                    <input type="text" name="mark" id="mark" class="form-control form-control-danger" placeholder="Mark">
                                    
                                </div>
                            </div>
                            <!--/span-->
                        </div>
                        <!--/row-->

                        
                  
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
                        <a href="/questions"><button type="button" class="btn btn-inverse">Cancel</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

